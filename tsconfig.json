// prettier-ignore
{
    "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
    
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "types": ["react-native", "jest"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": false,
        "target": "esnext"
    },
    
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
    ],
    "include": [
        "./**/*"
    ]
    
}
